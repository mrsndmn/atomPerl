#Postgres
use DBI;

my $dbname = ;
$dbh =  DBI->connect(
    "dbi:Pg:dbname=$dbname;host=$host;port=$port;",
    $username,
    $password,
    { RaiseError => 1 },
) or die "Cant connect to db!";
    
# SQlite
use DBI;

my $dbname = ;
$dbh =  DBI->connect(
    "dbi:SQLite:dbname=$dbname", '', '', { RaiseError => 1 },
    # Foreign key constraints are disabled by default in sqlite
    "PRAGMA foreign_keys = ON;"
) or die "Cant connect to db!";
    

